<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

    <RelativeLayout
            android:id="@+id/singleRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

        <ImageView
                android:id="@+id/userImg"
                android:src="@drawable/ic_launcher_background"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:scaleType="fitXY"/>

        <TextView
                android:id="@+id/pNametxt"
                android:text="User Name"
                android:textSize="20sp"

                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:layout_below="@+id/userImg"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp" android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

        <TextView
                android:id="@+id/pdesc"
                android:text="Job Profile"
                android:textSize="18sp"
                android:maxLines="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/pNametxt"
                android:layout_alignLeft="@+id/pNametxt"
                android:layout_alignStart="@+id/pNametxt" android:layout_marginLeft="-2dp"
                android:layout_marginTop="6dp" android:layout_marginStart="-2dp"/>

    </RelativeLayout>

    <View
            android:layout_below="@+id/singleRow"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="#f2f2f2" />

</RelativeLayout>